##
# FÃ¼hrt ein bestimmtes Kommando n mal aus
# $1: Zahl der wiederholungen
sl-dotimes(){
	T_QUOTE="@"
	HELP='usage: $0 <number of repeats> [-i] <commandstring> 
(<number of repeats> can be a positive number or the ~ symbol for infinite loops)'
	cnt=$1
	if [ "$2" = "-i" ]; then
		shift 2
		for ((i=0;i<$cnt;i++)); do
			command=$(echo $@ | sed "s/${T_QUOTE}i/$i/g")
			eval "$command"
		done
	elif [[ "$1" == --[Hh][Ee][Ll][Pp] ]] || (($#==0)) ; then
		echo "$HELP"	
	elif [[ "$1" == '~' ]]; then
		shift 1;
		while :; do
			eval $@
		done
	else
		shift 1
		for ((i=0;i<$cnt;i++)); do
			eval $@ 
		done
	fi
}

#change the PS1
sl-smallprompt(){
	PROMPT_COMMAND=""
	PS1="$SL_SMALL"
}

sl-tinyprompt(){
	PROMPT_COMMAND=""
	PS1="$SL_TINY"
}

sl-bigprompt(){
    PROMPT_COMMAND="$(sl-get-pc)"
}

sl-list-spaces(){
	for i in *; do 
		du -hs "$i"
	done
}

